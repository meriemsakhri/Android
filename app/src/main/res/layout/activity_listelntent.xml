<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ListelntentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Intent Explicite Button -->
        <TextView
            android:id="@+id/Txt_titre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="32dp"
            android:text="ActivitÃ© principale"
            android:textColor="#101010"
            android:textSize="36sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_intent_explicite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Intent Explicite"
            app:iconGravity="textStart"
            app:iconSize="24dp" />

        <!-- Calculatrice Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_calculatrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Calculatrice"
            app:icon="@drawable/ic_calculator"
            app:iconGravity="textStart"
            app:iconSize="24dp" />

        <!-- Intent Implicite Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_intent_implicite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Intent Implicite"
            app:iconGravity="textStart"
            app:iconSize="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_fermer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Fermer"
            app:iconGravity="textStart"
            app:iconSize="24dp" />

    </LinearLayout>
</ScrollView>