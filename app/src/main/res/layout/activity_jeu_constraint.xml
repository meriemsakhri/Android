<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#458DC8"
    android:padding="16dp"
    tools:context=".JeuActivity">

        <TextView
            android:id="@+id/Txt_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Secret"
            android:textColor="#FFFF"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp" />
        <TextView
            android:id="@+id/Txt_nbr_essai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentative 1/10"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:textSize="22sp"
            app:layout_constraintTop_toBottomOf="@id/Txt_titre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="45dp" />
        <EditText
            android:id="@+id/Edt_nombre_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#858363"
            android:hint="Entrez 3 chiffres"
            android:inputType="number"
            android:maxLength="3"
            android:padding="16dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@id/Txt_nbr_essai"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/Btn_valider"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="36dp"
            android:text="VERIFIER"
            android:textColor="#000000"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/Edt_nombre_user"   app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" />
        <TextView
            android:id="@+id/Txt_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Devinez le nombre entre 100 et 999."
            android:textAlignment="center"
            android:textColor="#E0E0E0"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/Btn_valider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
